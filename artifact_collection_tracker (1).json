{
  "id": "artifact-collection-tracker",
  "name": "Artifact Collection Tracker",
  "version": "1.1",
  "description": "Scans the Archaeology Journal for artifact collections, identifies which artifacts are missing for each collector, and displays a counter of required artifacts for each incomplete collection.",
  "author": "aiLMJC",
  "main": "index.html",
  "icon": "icon.png",
  "settings": {
    "scanInterval": 500,
    "ignoreCompleted": true,
    "artifactIncrement": 1
  },
  "collectors": {
    "Art Critique Jacques": {
      "collections": {
        "Imperial Professionalism": {
          "total": 3,
          "found": 0
        },
        "Aesthetic Appreciation": {
          "total": 5,
          "found": 0
        }
      }
    },
    "Collector Benoit": {
      "collections": {
        "Ancient Artifacts": {
          "total": 4,
          "found": 0
        },
        "Historical Treasures": {
          "total": 6,
          "found": 0
        }
      }
    },
    "Professor Alston": {
      "collections": {
        "Relic Restoration": {
          "total": 7,
          "found": 0
        },
        "Archaeological Wonders": {
          "total": 8,
          "found": 0
        }
      }
    },
    "Curator Mendel": {
      "collections": {
        "Lost Civilizations": {
          "total": 5,
          "found": 0
        },
        "Forgotten Legacies": {
          "total": 4,
          "found": 0
        }
      }
    },
    "Dr. Tobias": {
      "collections": {
        "Mystic Relics": {
          "total": 3,
          "found": 0
        },
        "Celestial Finds": {
          "total": 5,
          "found": 0
        }
      }
    }
  },
  "logic": {
    "scanCollector": "On clicking a collector, iterate through each collection. If a green tick (indicating a completed collection) is not detected, calculate missing artifacts as: missing = total - found.",
    "artifactFound": "When an artifact is detected via OCR, increment the 'found' counter by the artifactIncrement value (typically +1) and update the missing count."
  },
  "display": {
    "format": "Artifact {collectionName} - {missing} required"
  },
  "events": {
    "onCollectorClick": "scanCollector(collectorName)",
    "onArtifactDetected": "artifactFound(collectorName, collectionName)"
  }
}
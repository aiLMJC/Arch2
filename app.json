y{
  "pluginInfo": {
    "name": "Archaeology Collection Tracker",
    "version": "1.0",
    "description": "An Alt1 plugin that scans the Archaeology Collector interface to update the UI with collection progress data. Includes HTML, CSS, and JavaScript files packaged for import.",
